@{
    Layout = null;



}
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link rel="stylesheet" type="text/css" href="~/Content/style.css" />
    <title>VJShop</title>
    <style>
        .header .anh2 img {
            height: 100px;
            width: auto;
            float: left;
            object-fit: cover;
            margin-left: 5px;
        }
        .header .anh3 img {
            height: 100px;
            width: 419px;
            float: left;
            object-fit: cover;
            margin-left: 5px;
        }

        btn-box {
            text-align: right;
            margin-top: 30px;
            text-decoration: none;
        }

        .btn-box button {
            padding: 7.5px 15px;
            border-radius: 2px;
            background-color:chartreuse;
            color: #ffffff;
            border: none;
            outline: none;
            margin-left: 10px;
            margin-top: 10px;
            float: right;
            margin-right: 20px;
            
        }

        .header .gmail img {
            height: 20px;
            width: 20px;
            float: left;
            margin-top: 67px;
            margin-left: 5px;
        }

        .footer div {
            color: black;
            text-align: right;
            padding-top: 15px;
            padding-right: 10px;
        }

        .footer .diachi {
            float: left;
            margin-left: 5px;
            padding-top: 15px;
        }

        .header .phone img {
            height: 20px;
            width: 20px;
            float: left;
            margin-top: 67px;
            margin-left: 10px;
        }

        .footer .anhfooter img {
            height: 200px;
            width: 100%;
            
        }
        nav {
            width: 100%;
            height: 50px;
            line-height: 50px;
            background-color: orange;
        }

            nav ul li {
                display: inline-block;
                border-right: thin solid gainsboro;
            }

                nav ul li a {
                    text-decoration: none;
                    color: blue;
                    padding: 0px 20px;
                    font-size: 18px;
                    font-weight: bold;
                    display: inline-block;
                }

                nav ul li:last-child {
                    border-right: none;
                }

                nav ul li:hover {
                    background-color: chartreuse;
                }
    </style>
</head>


<body>

    <div id="container">
        <div class="header">
            <div class="anh1"><img src="~/Content/image/VJShop.jpg" /></div>
            <div class="gmail"><img src="~/Content/image/gmail.jpg" /></div>
            <div class="chugmail">Gmail: tranhoang20062000@gmail.com - </div>
            <div class="phone"><img src="~/Content/image/phone.jpg" /></div>
            <div class="chuphone">Phone: 0235789345</div>
            <div class="anh2"><img src="~/Content/image/logo4.jpg" /></div>
            <div class="anh3"><img src="~/Content/image/banner.JPG" /></div>

        </div>
        <nav>

            

            <ul >
                <li>@Html.ActionLink("Trang chủ", "Index", "Home")</li>
                <li>@Html.ActionLink("Danh mục máy ảnh", "Index", "DMMAYANHs")</li>


            </ul>
        </nav>
        <div class="main" style="height:auto;">

            @RenderBody()
            @RenderSection("scripts", required: false)

        </div>
        <div class="footer" style="height:300px;background-color:white">
            <div class="anhfooter"><img src="~/Content/image/banner2.JPG" /></div>
            <img src="~/Content/image/diachi.jpg" style="width:20px;height:20px;margin-top:13px;float:left" />
            <div class="diachi">Địa chỉ: Hà Nội, Hà Nội, Việt Nam</div>
            <div>@Html.Label("Datetime: ")<text> </text> @DateTime.Now</div>
            <img src="~/Content/image/icon-facebook.png" style="width:20px;height:20px;margin-top:13px;float:left;margin-left:20px;" />
            <img src="~/Content/image/icon-Instagram.png" style="width:20px;height:20px;margin-top:13px;float:left;margin-left:20px;" />
            <img src="~/Content/image/icon-twitter.png" style="width:20px;height:20px;margin-top:13px;float:left;margin-left:20px;" />
            <img src="~/Content/image/icon-youtube.png" style="width:20px;height:20px;margin-top:13px;float:left;margin-left:20px;" />
            <img src="~/Content/image/gmail.jpg" style="width:20px;height:20px;margin-top:13px;float:left;margin-left:20px;" />

        </div>
    </div>
</body>
</html>
